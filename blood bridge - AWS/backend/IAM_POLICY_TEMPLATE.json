{
  "Version": "2012-10-17",
  "Statement": [
    {
      "Sid": "DynamoDBReadWriteAccess",
      "Effect": "Allow",
      "Action": [
        "dynamodb:GetItem",
        "dynamodb:PutItem",
        "dynamodb:UpdateItem",
        "dynamodb:DeleteItem",
        "dynamodb:Scan",
        "dynamodb:Query"
      ],
      "Resource": [
        "arn:aws:dynamodb:*:*:table/BloodBridgeUsers",
        "arn:aws:dynamodb:*:*:table/BloodBridgeDonations",
        "arn:aws:dynamodb:*:*:table/BloodBridgeRequests",
        "arn:aws:dynamodb:*:*:table/BloodBridgeMessages"
      ]
    },
    {
      "Sid": "SNSPublishAccess",
      "Effect": "Allow",
      "Action": [
        "sns:Publish"
      ],
      "Resource": "arn:aws:sns:*:*:*"
    }
  ]
}
